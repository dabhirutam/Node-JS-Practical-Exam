<!DOCTYPE html>
<html lang="en">

<!-- HTML Head -->
<%- include('../components/head') %>

    <body>
        <!-- Navbar -->
        <%- include('../components/navbar') %>

            <section class="section profile">
                <div class="container py-4">
                    <div class="row justify-content-center py-5">
                        <div class="col-lg-8 bg-white shadow-lg rounded-3 p-4">
                            <h2 class="text-center">Add Blog</h2>
                            <form class="row g-3" action="/addBlog" method="post" enctype="multipart/form-data">
                                <div class="col-12 mb-3">
                                    <label for="title" class="col-form-label">Title</label>
                                    <input name="title" type="text" class="form-control" id="title" value="">
                                </div>
                                <div class="col-12">
                                    <label for="img" class="col-form-label">Img</label>
                                    <input class="form-control" name="img" type="file" id="img">
                                </div>
                                <div class="col-12 mb-3 ">
                                    <label for="content" class="col-form-label">Content</label>
                                    <textarea name="description" class="form-control col-12" id="content"
                                        style="height: 100px"></textarea>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary w-100">Add Blog</button>
                                </div>
                            </form>
                        </div>
                    </div>
            </section>
    </body>

</html>